const db = require('../../models');
const kegiatanModel = require('../../models/informasiModels/kegiatanModel');

exports.getKegiatan = async (req, res) => {
    try {
        const content = await kegiatanModel.find();
        res.status(200).send({
            message: "Success get kegiatan",
            data: content
        });
    } catch (err) {
        res.status(500).send({
            message: err.message || "Some error occurred while get visi misi."
        });
    }
}

exports.getKegiatanById = async (req, res) => {
    try {
        const id = req.params._id;
        const content = await kegiatanModel.findById(id).populate('kategori');
        res.status(200).send({
            message: "Success get kegiatan",
            data: content
        });
    } catch (err) {
        res.status(500).send({
            message: err.message || "Some error occurred while get visi misi."
        });
    }
}


exports.postKegiatan = async (req, res) => {
    upload.many(req, res, async (error) => {
        if (error) {
            console.error(error.message);
            res.status(500).send({ message: 'Internal Server Error', error: error.message });
            return;
        }

        try {
            const { title, content, price, kategori, deskripsi, spesifikasi } = req.body;
            const images = req.files.map((file) => file.filename);
            const newKegiatan = new kegiatanModel({
                title,
                content,
                image: images,
            });
            let kategoriId;

            kategoriId = process.env.DEFAULT_KATEGORI;
            dataNonKategori.ofp.push(newKegiatan);
            newKegiatan.kategori = kategoriId;
            await dataNonKategori.save();
            await newKegiatan.save();

            res.status(200).send({
                message: "Success post kegiatan",
                data: newKegiatan
            });
        } catch (error) {
            console.error(error.message);
            res.status(500).send({
                message: err.message || "Some error occurred while post visi misi."
            });
        }
    });
}

exports.putKegiatan = async (req, res) => {
    const id = req.params._id;
    upload.many(req, res, async (error) => {
        if (error) {
            console.error(error.message);
            res.status(500).send({ message: 'Internal Server Error', error: error.message });
            return;
        }
        const { title, content, price, kategori, deskripsi, spesifikasi } = req.body;
        const { confirmUpdateImage } = req.body;
        const updatedProduct = {
            title,
            content,
            price,
            kategori,
            deskripsi,
            spesifikasi
        };

        let images = [];
        if (confirmUpdateImage === 'true') {
            // menghapus gambar lama
            const product = await kegiatanModel.findById(id);
            product.image.forEach((image) => {
                fs.unlinkSync(`assets/${image}`);
            });
            // menambahkan gambar baru
            images = req.files.map((file) => file.filename);
            updatedProduct.image = images;
        }
        try {
            const result = await kegiatanModel.findByIdAndUpdate(id, updatedProduct, { new: true });
            res.status(200).send({
                message: "Success put kegiatan",
                data: newKegiatan
            });
        } catch (error) {
            console.error(error.message);
            res.status(500).send({
                message: err.message || "Some error occurred while put visi misi."
            });
        }
    });
}

exports.deleteKegiatan = async (req, res) => {
    try {
        const id = req.params._id;
        const result = await kegiatanModel.findByIdAndDelete(id);
        res.status(200).send({
            message: "Success delete kegiatan",
            data: newKegiatan
        });
    } catch (error) {
        res.status(500).send({
            message: err.message || "Some error occurred while delete visi misi."
        });
    }
}

